<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!--MainActivity-->
    <style name="TextView_Allcaps">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_8sp</item>
        <item name="android:textColor">@color/gray</item>/>
        <item name="android:textAllCaps">true</item>/>
        <item name="android:layout_marginBottom">@dimen/dimen_3dp</item>/>
    </style>

    <style name="TextView__noAllcaps">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_10sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:singleLine">true</item>/>
        <item name="android:textAllCaps">false</item>/>
    </style>

    <style name="EditText">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
        <item name="android:background">@android:color/transparent</item>/>
    </style>

    <style name="FrameLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimen_5dp</item>
        <item name="android:padding">@dimen/dimen_3dp</item>/>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">@dimen/dimen_20dp</item>
        <item name="android:layout_height">@dimen/dimen_20dp</item>
    </style>

    <style name="ImageView2">
        <item name="android:layout_width">@dimen/dimen_17dp</item>
        <item name="android:layout_height">@dimen/dimen_17dp</item>
    </style>

    <style name="ImageView_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Navigation-->
    <style name="TV_Navigation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>/>
    </style>

    <!--Cardview-->
    <style name="TV_CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>/>
    </style>

    <!--Dat xe-->
    <style name="TV_Datxe">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>/>
    </style>

    <style name="TV_Datxe2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_10sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
        <item name="android:layout_marginLeft">@dimen/dimen_4dp</item>/>
    </style>

    <style name="TV_Datxe3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_10sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
    </style>

    <style name="IM_Datxe">
        <item name="android:layout_width">@dimen/dimen_18dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>/>
    </style>

    <style name="LN_Datxe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/dimen_3dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_3dp</item>
    </style>

    <!--How to charge-->
    <style name="TV_HowtoCharge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
    </style>

    <style name="LN_HowtoCharge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>/>
        <item name="android:paddingTop">@dimen/dimen_2dp</item>/>
        <item name="android:paddingBottom">@dimen/dimen_2dp</item>/>
    </style>

    <style name="IM_HowtoCharge">
        <item name="android:layout_width">@dimen/dimen_45dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_3dp</item>/>
        <item name="android:background">@drawable/retangle</item>/>
    </style>

    <!--Item Manage Driver-->
    <style name="TV_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
    </style>

    <!--Bill-->
    <style name="TV_Bill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>/>
    </style>
    <style name="TV_Bill2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@color/black</item>/>
        <item name="android:textAllCaps">false</item>/>
    </style>
</resources>
